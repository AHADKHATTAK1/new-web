

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="instagram-feed color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper text-center" style="margin-bottom: 2rem;">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
        {%- unless section.settings.subheading == blank -%}
          <p style="color: rgba(var(--color-foreground-rgb), 0. 7); margin-top: 0.5rem;">
            {{ section.settings.subheading }}
          </p>
        {%- endunless -%}
      </div>
    {%- endunless -%}
    
    <div class="instagram-grid grid grid--2-col grid--3-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop" style="gap: {{ section.settings.grid_gap }}px;">
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          <div class="instagram-item" {{ block.shopify_attributes }}>
            <a 
              {% if block.settings.link != blank %}
                href="{{ block.settings.link }}"
              {% else %}
                href="#"
                role="link"
                aria-disabled="true"
              {% endif %}
              class="instagram-item__link"
              style="display: block; position: relative; overflow: hidden; border-radius: 8px; aspect-ratio: 1;"
              {% if block.settings.link != blank %}target="_blank" rel="noopener"{% endif %}
            >
              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag: loading: 'lazy', class: 'instagram-item__image', style: 'width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;'
                }}
              {%- else -%}
                <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D); display: flex; align-items: center; justify-content: center; color: white; font-size: 48px;">
                  ðŸ“·
                </div>
              {%- endif -%}
              
              <div class="instagram-item__overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); opacity: 0; transition: opacity 0.3s; display: flex; align-items: center; justify-content: center; color: white;">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </div>
            </a>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- unless section.settings.instagram_handle == blank -%}
      <div style="text-align: center; margin-top: 2rem;">
        <a 
          href="https://instagram.com/{{ section.settings.instagram_handle }}" 
          target="_blank" 
          rel="noopener"
          class="button button--primary"
          style="display: inline-flex; align-items: center; gap: 8px;"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          Follow @{{ section.settings.instagram_handle }}
        </a>
      </div>
    {%- endunless -%}
    
  </div>
</div>

<style>
  .instagram-item__link:hover .instagram-item__image {
    transform: scale(1.1);
  }
  
  .instagram-item__link:hover .instagram-item__overlay {
    opacity: 1;
  }
</style>

{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "@yourhandle"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle",
      "info": "Your Instagram username (without @)",
      "default": "yourhandle"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Gap between images",
      "default": 16
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Instagram post",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
