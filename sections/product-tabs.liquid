

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product-tabs color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper text-center" style="margin-bottom: 2rem;">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
      </div>
    {%- endunless -%}
    
    <div class="product-tabs__wrapper">
      <!-- Tab Navigation -->
      <div class="product-tabs__nav" style="display: flex; justify-content: center; gap: 20px; margin-bottom: 2rem; flex-wrap: wrap;">
        {%- if section.settings.show_new_tab -%}
          <button class="tab-btn active" data-tab="new" style="padding: 12px 24px; background: rgb(var(--color-button-rgb)); color: rgb(var(--color-button-text-rgb)); border: none; border-radius: 24px; cursor: pointer; font-weight: 600; transition: all 0.3s;">
            üÜï New Arrivals
          </button>
        {%- endif -%}
        
        {%- if section.settings.show_featured_tab -%}
          <button class="tab-btn {% unless section.settings.show_new_tab %}active{% endunless %}" data-tab="featured" style="padding: 12px 24px; background: transparent; color: rgb(var(--color-foreground-rgb)); border: 2px solid rgba(var(--color-foreground-rgb), 0.2); border-radius: 24px; cursor: pointer; font-weight: 600; transition: all 0.3s;">
            ‚≠ê Featured
          </button>
        {%- endif -%}
        
        {%- if section.settings.show_sale_tab -%}
          <button class="tab-btn {% unless section.settings.show_new_tab or section.settings.show_featured_tab %}active{% endunless %}" data-tab="sale" style="padding: 12px 24px; background: transparent; color: rgb(var(--color-foreground-rgb)); border: 2px solid rgba(var(--color-foreground-rgb), 0.2); border-radius: 24px; cursor: pointer; font-weight: 600; transition: all 0.3s;">
            üî• On Sale
          </button>
        {%- endif -%}
      </div>
      
      <!-- Tab Content -->
      <div class="product-tabs__content">
        {%- if section.settings.show_new_tab -%}
          <div class="tab-panel active" data-panel="new">
            <div class="grid grid--2-col grid--3-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop" style="gap: 20px;">
              {%- if section.settings.new_collection != blank -%}
                {%- for product in section.settings.new_collection.products limit: section.settings.products_to_show -%}
                  <div class="grid__item">
                    {% render 'product-card-advanced', card_product: product, show_vendor: section.settings.show_vendor %}
                  </div>
                {%- endfor -%}
              {%- else -%}
                {%- for i in (1..section.settings.products_to_show) -%}
                  <div class="grid__item">
                    {% render 'card-product-skeleton' %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        
        {%- if section.settings.show_featured_tab -%}
          <div class="tab-panel {% unless section.settings.show_new_tab %}active{% endunless %}" data-panel="featured" {% if section.settings.show_new_tab %}style="display: none;"{% endif %}>
            <div class="grid grid--2-col grid--3-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop" style="gap: 20px;">
              {%- if section.settings.featured_collection != blank -%}
                {%- for product in section.settings.featured_collection.products limit: section.settings.products_to_show -%}
                  <div class="grid__item">
                    {% render 'product-card-advanced', card_product: product, show_vendor: section.settings.show_vendor %}
                  </div>
                {%- endfor -%}
              {%- else -%}
                {%- for i in (1..section.settings.products_to_show) -%}
                  <div class="grid__item">
                    {% render 'card-product-skeleton' %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        
        {%- if section.settings.show_sale_tab -%}
          <div class="tab-panel {% unless section.settings.show_new_tab or section.settings.show_featured_tab %}active{% endunless %}" data-panel="sale" {% if section.settings.show_new_tab or section.settings.show_featured_tab %}style="display: none;"{% endif %}>
            <div class="grid grid--2-col grid--3-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop" style="gap: 20px;">
              {%- if section.settings.sale_collection != blank -%}
                {%- for product in section.settings.sale_collection.products limit: section.settings.products_to_show -%}
                  <div class="grid__item">
                    {% render 'product-card-advanced', card_product: product, show_vendor: section.settings.show_vendor %}
                  </div>
                {%- endfor -%}
              {%- else -%}
                {%- for i in (1..section.settings.products_to_show) -%}
                  <div class="grid__item">
                    {% render 'card-product-skeleton' %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
    
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanels = document.querySelectorAll('.tab-panel');
    
    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');
        
        // Remove active from all buttons
        tabBtns.forEach(b => {
          b.style.background = 'transparent';
          b.style.color = 'rgb(var(--color-foreground-rgb))';
          b.style.border = '2px solid rgba(var(--color-foreground-rgb), 0.2)';
          b.classList.remove('active');
        });
        
        // Add active to clicked button
        this.style.background = 'rgb(var(--color-button-rgb))';
        this.style.color = 'rgb(var(--color-button-text-rgb))';
        this.style.border = '2px solid rgb(var(--color-button-rgb))';
        this.classList.add('active');
        
        // Hide all panels
        tabPanels.forEach(panel => {
          panel.style.display = 'none';
          panel.classList.remove('active');
        });
        
        // Show target panel
        const targetPanel = document.querySelector(`[data-panel="${targetTab}"]`);
        if (targetPanel) {
          targetPanel.style.display = 'block';
          targetPanel.classList.add('active');
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Product Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1"
    },
    {
      "type": "header",
      "content": "New Arrivals Tab"
    },
    {
      "type": "checkbox",
      "id": "show_new_tab",
      "label": "Show New Arrivals tab",
      "default": true
    },
    {
      "type": "collection",
      "id": "new_collection",
      "label": "New Arrivals collection"
    },
    {
      "type": "header",
      "content": "Featured Tab"
    },
    {
      "type": "checkbox",
      "id": "show_featured_tab",
      "label": "Show Featured tab",
      "default": true
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Featured collection"
    },
    {
      "type": "header",
      "content": "Sale Tab"
    },
    {
      "type": "checkbox",
      "id": "show_sale_tab",
      "label": "Show Sale tab",
      "default": true
    },
    {
      "type": "collection",
      "id": "sale_collection",
      "label": "Sale collection"
    },
    {
      "type": "header",
      "content": "Product Settings"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "label": "Products to show per tab",
      "default": 8
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Product Tabs",
      "settings": {
        "heading": "Shop by Category",
        "show_new_tab": true,
        "show_featured_tab": true,
        "show_sale_tab": true,
        "products_to_show": 8,
        "columns_desktop": 4
      }
    }
  ]
}
{% endschema %}
