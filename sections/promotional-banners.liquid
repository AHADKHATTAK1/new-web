

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="promotional-banners color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
      </div>
    {%- endunless -%}
    
    <div class="promo-grid grid grid--{{ section.settings.columns_mobile | default: '1' }}-col grid--2-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop">
      {%- for block in section.blocks -%}
        {%- if block.type == 'promo_item' -%}
          <div class="promo-card" {{ block.shopify_attributes }}>
            <div class="promo-card__inner color-{{ block.settings.color_scheme }}">
              
              {%- if block.settings.image != blank -%}
                <div class="promo-card__image-wrapper">
                  {{
                    block.settings.image
                    | image_url: width: 600
                    | image_tag: loading: 'lazy', class: 'promo-card__image', alt: block.settings.title
                  }}
                </div>
              {%- endif -%}
              
              <div class="promo-card__content">
                {%- if block.settings.badge != blank -%}
                  <span class="promo-card__badge">{{ block.settings.badge }}</span>
                {%- endif -%}
                
                {%- if block.settings.title != blank -%}
                  <h3 class="promo-card__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <div class="promo-card__text rte">{{ block.settings.text }}</div>
                {%- endif -%}
                
                {%- if block.settings.button_label != blank -%}
                  <a 
                    {% if block.settings.button_link != blank %}
                      href="{{ block.settings.button_link }}"
                    {% else %}
                      role="link" aria-disabled="true"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .promotional-banners {
    overflow: hidden;
  }
  
  .promo-grid {
    gap: 20px;
    margin-top: 30px;
  }
  
  .promo-card {
    position: relative;
  }
  
  .promo-card__inner {
    height: 100%;
    padding: 30px;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  
  .promo-card__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .promo-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .promo-card__content {
    position: relative;
    z-index: 1;
  }
  
  .promo-card__badge {
    display: inline-block;
    padding: 4px 12px;
    background: rgba(var(--color-button), 0.9);
    color: rgb(var(--color-button-text));
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 10px;
  }
  
  .promo-card__title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
    line-height: 1.3;
  }
  
  .promo-card__text {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 15px;
  }
  
  .promo-card .button {
    margin-top: auto;
  }
  
  @media screen and (max-width: 749px) {
    .promo-card__inner {
      padding: 20px;
    }
    
    .promo-card__title {
      font-size: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Promotional banners",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Special Offers"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1",
      "label": "Number of columns on mobile"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "promo_item",
      "name": "Promotional banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge text",
          "default": "Sale"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Promotional banner"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Pair text with an image to focus on your chosen product.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "label": "Use outline button style",
          "default": false
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color scheme",
          "default": "scheme-1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotional banners",
      "blocks": [
        {
          "type": "promo_item"
        },
        {
          "type": "promo_item"
        },
        {
          "type": "promo_item"
        }
      ]
    }
  ]
}
{% endschema %}
