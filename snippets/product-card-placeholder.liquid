<div class="product-card h-100 p-16 border border-gray-100 rounded-16 position-relative" style="background: rgba(var(--color-foreground-rgb), 0.02);">
  
  <!-- Skeleton Image -->
  <div class="product-card__thumb flex-center rounded-8 bg-gray-50 position-relative" style="aspect-ratio: 1/1; background: rgba(var(--color-foreground-rgb), 0.08); animation: skeleton-pulse 1.5s ease-in-out infinite;">
  </div>
  
  <!-- Skeleton Content -->
  <div class="product-card__content mt-16">
    
    <!-- Skeleton Category/Vendor -->
    <div style="height: 12px; width: 50%; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 4px; margin-bottom: 8px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.1s;"></div>
    
    <!-- Skeleton Title -->
    <div style="height: 16px; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 4px; margin-bottom: 8px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.2s;"></div>
    <div style="height: 16px; width: 80%; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 4px; margin-bottom: 12px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.3s;"></div>
    
    <!-- Skeleton Rating -->
    <div class="d-flex align-items-center gap-8 mb-12">
      <div style="height: 14px; width: 100px; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 4px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.4s;"></div>
    </div>
    
    <!-- Skeleton Price -->
    <div class="product-card__price my-12">
      <div style="height: 20px; width: 70px; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 4px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.5s;"></div>
    </div>
    
    <!-- Skeleton Button -->
    <div style="height: 44px; background: rgba(var(--color-foreground-rgb), 0.08); border-radius: 24px; margin-top: 16px; animation: skeleton-pulse 1.5s ease-in-out infinite 0.6s;"></div>
  </div>
  
</div>

<style>
  @keyframes skeleton-pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }
</style>
