{%- comment -%}
  Quick View Modal for Horizon Theme
{%- endcomment -%}

<div id="QuickViewModal" class="modal fade" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content border-0 rounded-16 overflow-hidden">
      <div class="modal-header border-0 p-16 position-absolute end-0 top-0 z-3">
        <button type="button" class="btn-close bg-white rounded-circle p-12 shadow-sm" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <div id="QuickViewContent" class="row g-0">
          <div class="col-12 p-80 text-center">
            <div class="spinner-border text-main-600" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #QuickViewModal .modal-xl {
    max-width: 1000px;
  }
  #QuickViewModal .btn-close {
    background-size: 10px;
    opacity: 1;
  }
  #QuickViewModal .modal-content {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
</style>
